{
  "compilerOptions": {
    /* === Project Structure === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Node.js Environment === */
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node"],

    /* === Module Interop === */
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* === Output === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Type Checking === */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
